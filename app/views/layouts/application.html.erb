<!DOCTYPE html>
<html>
<head>
  <title>Maniac Blog</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<%= notice %>
<div id="user-nav">
	<% if current_user %>
		<%= link_to "Sign out", :signout %>
	<% else %>
		<%= link_to "Sign in",  :signin %>
	<% end %>
</div>
<%= yield %>

</body>
</html>
