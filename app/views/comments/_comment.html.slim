- unless comment.new_record?
	= div_for comment do
		.comment-signature
			= image_tag comment.user.avatar
			h3 = comment.user.name
		
		.comment-content
			= markdown comment.content	
		
		.comment-info
			.comment-timestamp
				= "#{time_ago_in_words comment.created_at} #{t('time.ago')}"
		
			- if comment.user == current_user
				ul.comment-nav
			 		li = link_to t("nav.edit"), [:edit, post, comment]
			 		li = link_to t("nav.delete"), [post, comment], :method => :delete, :confirm => "Are you sure?"
